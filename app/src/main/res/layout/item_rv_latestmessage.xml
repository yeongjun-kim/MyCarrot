<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="item"
            type="com.mvvm.mycarrot.model.LatestMessageDTO" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="14dp"
        android:paddingBottom="14dp">

        <ImageView
            android:id="@+id/item_latestmessage_iv_profile"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="#000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_latestmessage_tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:hint="nickname"
            android:textColor="#000"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@id/item_latestmessage_iv_profile"
            app:layout_constraintTop_toTopOf="@id/item_latestmessage_iv_profile" />

        <TextView
            android:id="@+id/item_latestmessage_tv_dong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:hint="dong"
            android:textSize="13sp"
            app:layout_constraintStart_toEndOf="@id/item_latestmessage_tv_nickname"
            app:layout_constraintTop_toTopOf="@id/item_latestmessage_tv_nickname" />

        <TextView
            android:id="@+id/item_latestmessage_tv_temp1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" • "
            android:textSize="13sp"
            app:layout_constraintStart_toEndOf="@id/item_latestmessage_tv_dong"
            app:layout_constraintTop_toTopOf="@id/item_latestmessage_tv_dong" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="6:47 오후"
            android:textSize="13sp"
            app:layout_constraintStart_toEndOf="@id/item_latestmessage_tv_temp1"
            app:layout_constraintTop_toTopOf="@id/item_latestmessage_tv_temp1" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="14dp"
            android:textColor="#000"
            app:layout_constraintBottom_toBottomOf="@id/item_latestmessage_iv_profile"
            app:layout_constraintEnd_toStartOf="@id/item_latestmessage_iv_itemurl"
            app:layout_constraintStart_toStartOf="@id/item_latestmessage_tv_nickname"
            app:layout_constraintTop_toBottomOf="@id/item_latestmessage_tv_nickname" />

        <ImageView
            android:id="@+id/item_latestmessage_iv_itemurl"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#000"
            app:layout_constraintBottom_toBottomOf="@id/item_latestmessage_iv_profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/item_latestmessage_iv_profile" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>