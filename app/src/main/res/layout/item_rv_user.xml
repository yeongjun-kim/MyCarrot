<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="user"
            type="com.mvvm.mycarrot.model.UserObject" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_rv_user_iv_profile"
            android:layout_width="40dp"
            android:layout_height="0dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp"
            RepresentationcircleSrc="@{user.profileUrl}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_rv_user_tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="nickname"
            android:textColor="#000"
            android:text="@{user.nickname}"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@id/item_rv_user_iv_profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.07"
            app:layout_constraintStart_toEndOf="@id/item_rv_user_iv_profile"
            app:layout_constraintTop_toTopOf="@id/item_rv_user_iv_profile"
            app:layout_constraintVertical_bias="0.25" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{user.location}"
            android:hint="엉겅동"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="@id/item_rv_user_tv_nickname"
            app:layout_constraintTop_toBottomOf="@id/item_rv_user_tv_nickname" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorDivision"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>