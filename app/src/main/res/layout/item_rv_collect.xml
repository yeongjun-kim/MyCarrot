<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="item"
            type="com.mvvm.mycarrot.model.ItemObject" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_rv_collect_iv"
            FirstImage="@{item.imageList[0]}"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            app:layout_constraintDimensionRatio="1.4:1"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_rv_collect_tv_title"
            Title="@{item.title}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:singleLine="true"
            android:textColor="#000"
            app:layout_constraintEnd_toEndOf="@id/item_rv_collect_iv"
            app:layout_constraintStart_toStartOf="@id/item_rv_collect_iv"
            app:layout_constraintTop_toBottomOf="@id/item_rv_collect_iv" />

        <TextView
            android:id="@+id/item_rv_collect_tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:singleLine="true"
            android:text="@{item.userNickname}"
            app:layout_constraintStart_toStartOf="@id/item_rv_collect_tv_title"
            app:layout_constraintTop_toBottomOf="@id/item_rv_collect_tv_title" />

        <TextView
            android:id="@+id/item_rv_collect_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" â€¢ "
            app:layout_constraintBottom_toBottomOf="@id/item_rv_collect_tv_nickname"
            app:layout_constraintStart_toEndOf="@id/item_rv_collect_tv_nickname"
            app:layout_constraintTop_toTopOf="@id/item_rv_collect_tv_nickname" />

        <TextView
            android:id="@+id/item_rv_collect_tv_dong"
            DongText="@{item.userLocation}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/item_rv_collect_tv1"
            app:layout_constraintStart_toEndOf="@id/item_rv_collect_tv1"
            app:layout_constraintTop_toTopOf="@id/item_rv_collect_tv1" />

        <TextView
            android:id="@+id/item_rv_collect_tv_price"
            DecimalFormat="@{item.price}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="#000"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/item_rv_collect_tv_nickname"
            app:layout_constraintTop_toBottomOf="@id/item_rv_collect_tv_nickname" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>